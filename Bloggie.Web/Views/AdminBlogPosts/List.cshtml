@model List<Bloggie.Web.Models.Domain.BlogPost>
 @{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>SHOW THE  BLOG POSTS - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Page Title</th>
                    <th>Short Description</th>
                    <th>Published Date</th>
                    <th>Author</th>
                    <th>Is Visible?</th>
                    <th>Tags</th>
                     <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>@blogPost.PageTitle</td>
                        <td>@blogPost.ShortDescription</td>
                        <td>@blogPost.PublishedDate</td>
                        <td>@blogPost.Author</td>
                        <td>@blogPost.Visible</td>
                        <td>
                            @if (blogPost != null && blogPost.Tags != null)
                            {
                                foreach (var tag in blogPost.Tags)
                                {
                                    <span>@tag.DisplayName</span>
                                }
                            }
                            else
                            {
                                <span>No tags available</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a>
                            <a class="btn btn-danger"  asp-area="" asp-controller="AdminBlogPosts" asp-action="Delete" asp-route-id="@blogPost.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No blog posts found</p>
    }


                            </div>